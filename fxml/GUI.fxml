<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.*?>
<VBox fx:controller="controller.GUIController" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" >
   <children>
      <HBox alignment="CENTER" prefHeight="36.0" prefWidth="600.0" style="-fx-background-color: white;  -fx-border-color:grey; -fx-border-width: 1; -fx-border-style: solid;">
         <children>
             <Button fx:id="nextFile" onAction="#setNextFileAsTree" text="next">
                 <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                 </HBox.margin>
                 <font>
                     <Font name="Arial Bold" size="12.0" />
                 </font>
             </Button>
             <Label fx:id="fileNameLabel">
                 <HBox.margin>
                     <Insets left="20.0" right="30.0" />
                 </HBox.margin>
             </Label>
            <ToggleButton fx:id="fullscreenToggle" onAction="#toggleFullscreen"  mnemonicParsing="false" text="fullscreen" />
            <Label prefHeight="21.0" prefWidth="96.0" text="BioVis 2018" textAlignment="CENTER">
               <HBox.margin>
                  <Insets left="20.0" right="30.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold Italic" size="15.0" />
               </font>
            </Label>
            <Button fx:id="loadFile" onAction="#loadFileOnAction" mnemonicParsing="false" text="loadFile">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
            <Slider fx:id="nodeSizeSlider" min="6" max="32" blockIncrement="1" prefHeight="14.0" prefWidth="189.0">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Slider>

            <ChoiceBox fx:id="choiceBoxAlgorithm" onAction="#choiceBoxAlgorithmOnAction" prefWidth="150.0">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="RT"/>
                        <String fx:value="Walker"/>
                        <String fx:value="Radial"/>
                    </FXCollections>
                </items>
                <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </ChoiceBox>

             <ChoiceBox fx:id="choiceBoxEdgeType" onAction="#choiceBoxEdgeTypeOnAction" prefWidth="150.0">
                 <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                 </HBox.margin>
             </ChoiceBox>

             <ChoiceBox fx:id="choiceBoxRoot" onAction="#choiceBoxSelectRoot" prefWidth="150.0">
                 <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                 </HBox.margin>
             </ChoiceBox>

            <Button fx:id="exitBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#closeButtonAction" text="exit" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox fx:controller="controller.GUIController" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" >
   <children>
      <HBox alignment="CENTER" prefHeight="36.0" prefWidth="600.0" style="-fx-background-color: white;  -fx-border-color:grey; -fx-border-width: 1; -fx-border-style: solid;">
         <children>
             <!--
            <Slider fx:id="nodeSizeSlider" min="14" max="22" blockIncrement="0.1" prefHeight="14.0" prefWidth="95.0">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Slider>
-->

             <ChoiceBox fx:id="choiceBox_1" onAction="#cb_1" prefWidth="110.0">
                 <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                 </HBox.margin>
             </ChoiceBox>

             <ChoiceBox fx:id="choiceBox_2" onAction="#cb_2" prefWidth="130.0">
                 <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                 </HBox.margin>
             </ChoiceBox>

             <ChoiceBox fx:id="choiceBox_3" onAction="#cb_3" prefWidth="100.0">
                 <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                 </HBox.margin>
             </ChoiceBox>

             <TextField fx:id="params_1" prefWidth="60.0" />

             <ChoiceBox fx:id="choiceBox_4" onAction="#cb_4" prefWidth="110.0">
                 <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                 </HBox.margin>
             </ChoiceBox>

             <ChoiceBox fx:id="choiceBox_5" onAction="#cb_5" prefWidth="110.0">
                 <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                 </HBox.margin>
             </ChoiceBox>


             <Button fx:id="draw" onAction="#drawOnAction" mnemonicParsing="false" text="open" prefWidth="40">
                 <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                 </HBox.margin>
                 <font>
                     <Font name="Arial Bold" size="12.0" />
                 </font>
             </Button>


             <Button fx:id="loadFile" onAction="#loadFileOnAction" mnemonicParsing="false" text="open" prefWidth="50">
                 <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                 </HBox.margin>
                 <font>
                     <Font name="Arial Bold" size="12.0" />
                 </font>
             </Button>


             <ToggleButton fx:id="fullscreenToggle" onAction="#toggleFullscreen"  mnemonicParsing="false" text="[-]" prefWidth="35">
                 <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                 </HBox.margin>
             </ToggleButton>

            <Button fx:id="exitBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#closeButtonAction" text="exit" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
                <HBox.margin>
                    <Insets left="10.0" right="10.0" />
                </HBox.margin>
            </Button>
         </children>
      </HBox>

       <HBox style="-fx-background-color: white;  -fx-border-color:grey; -fx-border-width: 0 1 0 1; -fx-border-style: solid;">
            <children>
                <Label fx:id="crossingLabel" > </Label>
            </children>
       </HBox>

   </children>
</VBox>